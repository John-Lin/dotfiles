font-family = "Hurmit Nerd Font Mono"
font-codepoint-map = "U+4E00-U+9FFF,U+3400-U+4DBF = Iansui"
theme = Tomorrow Night
# theme = GruvboxDarkHard
# background = 1C2021
shell-integration-features = no-cursor,sudo,no-title

font-size = 16
# font-thicken = true
adjust-underline-thickness = -50%
cursor-style = block
cursor-color = ff2600

window-padding-balance = true
window-save-state = always
window-colorspace = "display-p3"

macos-titlebar-style = transparent
palette = 8=#969896

# split
keybind = cmd+f>v=new_split:right
keybind = cmd+f>s=new_split:down

keybind = cmd+f>j=goto_split:bottom
keybind = cmd+f>k=goto_split:top
keybind = cmd+f>h=goto_split:left
keybind = cmd+f>l=goto_split:right

# keybindings
keybind = cmd+f>r=reload_config
keybind = cmd+f>x=close_surface

keybind = cmd+f>n=new_window

keybind = cmd+f>z=toggle_split_zoom

keybind = cmd+f>e=equalize_splits

# other
copy-on-select = true
